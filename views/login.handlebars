<section class="login-screen col-6 mx-auto">
    <form class="login-form">
    <div class = "login-page">
        <h1 class="login-title">
           Reading Corner
        </h1>
        <div class="d-flex flex-column">
        <form class="login-form">
        <input class="login-email mx-auto" type="email" id="email-login"placeholder="Email">
        <input class="login-pass mx-auto " type="password" id="password-login" placeholder="Password">
        <button class="login-btn mx-auto" type="submit">Login</button>
        </form>
        </div>
        <h4 class = "login-text mx-auto">Don't have an account? <a class="reg-link" href="/register">Register</a></h4>
    </div>
    </form>
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Please enter a valid email and password</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true" class="close-span">&times;</span>
        </button>
      </div>
    </div>
  </div>
</div>
<div id="overlay"></div>
    </section>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
